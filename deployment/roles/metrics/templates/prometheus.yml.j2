global:
  scrape_interval: 1m
  evaluation_interval: 1m

remote_write:
  - url: "http://influx:8086/api/v1/prom/write?db=spaceapi&u={{ influxdb_user }}&p={{ influxdb_user_password }}"
remote_read:
  - url: "http://influx:8086/api/v1/prom/read?db=spaceapi&u={{ influxdb_user }}&p={{ influxdb_user_password }}"


scrape_configs:
  - job_name: 'prometheus'
    static_configs:
    - targets: ['localhost:9090']
  - job_name: 'traefik'
    scheme: 'https'
    basic_auth:
      username: '{{ default_basic_auth_user }}'
      password: '{{ default_basic_auth_password }}'
    static_configs:
    - targets: ['reverseproxy.{{ domain }}']
  - job_name: 'directory'
    scheme: 'https'
    static_configs:
    - targets: ['directory.{{ domain }}']
  - job_name: 'directory scraper'
    scheme: 'https'
    metrics_path: '/collector/metrics'
    static_configs:
    - targets: ['directory.{{ domain }}']
  - job_name: 'grafana'
    scheme: 'https'
    static_configs:
    - targets: ['metrics.{{ domain }}']
  - job_name: 'server'
    static_configs:
    - targets: ['{{ domain }}:9100']
